<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div>
        <h3>Name :</h3>
        <h1><%= @user.name %></h1>
      </div>
      <div>
      <div>
        <h3>Activated :</h3>
        <h1><%= @user.activated %></h2>
      </div>
      <% if @user.activated%>
          <div>
            <h3>Activated at :</h3>
            <h1><%= @user.activated_at %></h2>
          </div>
      <% end %>
      <div>
        <h3>Created at :</h3>
        <h1><%= @user.created_at %></h2>
      </div>
      <div>
        <h3>Updated at :</h3>
        <h1><%= @user.updated_at %></h2>
      </div>
      <div>
        <h3>Admin :</h3>
        <h1><%= @user.admin %></h2>
      </div>
      <div>
        <h3>Email :</h3>
        <h1><%= @user.email %></h2>
      </div>
      
    </section>
  </aside>
</div>